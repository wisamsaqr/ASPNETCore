@model IEnumerable<Employee>

@{
    ViewBag.title = "Employees List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.PhotoPath ?? "noimage.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
                <img asp-append-version="true" class="card-img-top imageThumbnail" src="@photoPath" style="width: 100%;"/>
                <div class="card-footer text-center">
                    @*<a href="/Home/Details/@employee.Id" class="btn btn-primary">Show</a>*@
                    @*@Html.ActionLink("Show", "Details", "Home", new { id = employee.Id })*@
                    @*@<a href="@Url.Action("Details", "Home", new { id = employee.Id })">Show</a>*@
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary">Show</a>

                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id"
                       class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
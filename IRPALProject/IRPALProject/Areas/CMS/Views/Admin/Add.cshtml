@model IRPALProject.Models.Admin
@{
    ViewBag.Title = "إضافة مستخدم";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        <p></p>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.FullName, "الاسم الكامل", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placehplder = "الرجاء إدخال الاسم الكامل", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(model => model.FullName, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, "البريد الإلكتروني", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placehplder = "الرجاء إدخال البريد الإلكتروني" })
                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Passowrd", "كلمة المرور", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("Password", new { @class = "form-control", @placehplder = "الرجاء إدخال كلمة المرور" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Mobile, "رقم الهاتف", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", @placehplder = "الرجاء إدخال رقم الهاتف" })
                @Html.ValidationMessageFor(model => model.Mobile, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-10 col-md-offset-2">
            <label>
                @Html.CheckBoxFor(model => model.Active, new { @class = "form-control" })
                فعال
            </label>
        </div>

        <div class="col-md-10 col-md-offset-2">
            <input type="submit" value="إضافة" class="btn btn-success" />
            @Html.ActionLink("عودة إلى القائمة", "Index", null, new { @class = "btn btn-default" })
        </div>

    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
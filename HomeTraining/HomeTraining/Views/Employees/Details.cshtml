@model Employee

<h1>Employee Details</h1>

<dl>
    <dt>Id</dt>
    <dd>@Model.Id</dd>
    <dt>Name</dt>
    <dd>@Model.Name</dd>
    <dt>Birthdate</dt>
    <dd>@Model.Birthdate</dd>
    <dt>Department</dt>
    <dd>@Model.Department.Name</dd>
</dl>

